{
  "name": "esase/tiny-view",
  "type": "library",
  "description": "The simple template engine for representation of your html code.",
  "license": "MIT",
  "keywords": [
    "esase",
    "tinyframework",
    "microservices",
    "framework",
    "lightweight",
    "view",
    "templateengine",
    "layout",
    "renderer",
    "html"
  ],
  "support": {
  },
   "authors": [
        {
            "name": "Alex Ermashev",
            "email": "alexermashev@gmail.com"
        }
    ],
  "require": {
    "php": "^7.4 || ^8.0",
    "esase/tiny-event-manager": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0 || ^10.0",
    "php-coveralls/php-coveralls": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "Tiny\\View\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TinyTest\\View\\": "test/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  },
  "minimum-stability": "dev",
  "prefer-stable" : true
}
